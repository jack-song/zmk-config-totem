#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define BASE 0
#define NAV  1
#define SYM  2

&mt {
  flavor = "balanced";
  tapping-term-ms = <140>;
};

/ {
    macros {
        macscn: macscn {
            label = "macscn";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LGUI>
                , <&macro_press &kp LSHFT>
                , <&macro_tap &kp N4>
                , <&macro_release &kp LGUI>
                , <&macro_release &kp LSHFT>
                ;
        };
        backtab: backtab {
            label = "backtab";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LSHFT>
                , <&macro_tap &kp TAB>
                , <&macro_release &kp LSHFT>
                ;
        };
    };

     combos {
            compatible = "zmk,combos";
            combo_backtab {
                timeout-ms = <50>;
                key-positions = <1 2>;
                bindings = <&backtab>;
            };
            combo_macscn {
                timeout-ms = <50>;
                key-positions = <2 3>;
                bindings = <&macscn>;
            };
            combo_back {
                timeout-ms = <50>;
                key-positions = <21 22>;
                bindings = <&kp BSPC>;
            };
            combo_enter {
                timeout-ms = <50>;
                key-positions = <22 23>;
                bindings = <&kp ENTER>;
            };
            combo_del {
                timeout-ms = <50>;
                key-positions = <23 24>;
                bindings = <&kp DEL>;
            };
    };



        keymap {
                compatible = "zmk,keymap";
                base_layer {
                    label= "BASE"                              ;
                    bindings = <
                &kp Q           &kp W      &kp F      &kp P      &kp B               &kp J      &kp L      &kp U          &kp Y        &kp SEMI
                &kp A           &kp R      &kp S      &kp T      &kp G               &kp M      &kp N      &kp E          &kp I        &kp O
&kp UNDER       &mt LCTRL Z     &kp X      &kp C      &kp D      &kp V               &kp K      &kp H      &kp COMMA      &kp DOT      &kp FSLH      &kp EQUAL
                          &mt LGUI ESC &mt LSHFT TAB &kp SPACE                  &kp BSPC   &lt NAV ENTER &lt SYM SQT
                    >;
                };

                nav_layer {
                    label= "NAVI"                              ;
                    bindings = <
                &kp EXCL    &kp AT          &kp HASH    &kp DLLR          &kp PRCNT                &kp CARET   &kp AMPS           &kp STAR    &kp LPAR    &kp RPAR
                &kp GRAVE   &kp MINUS       &kp EQUAL   &kp LBRC          &kp LBKT                 &kp LEFT    &kp DOWN           &kp UP      &kp RIGHT   &trans
&kp UNDER       &kp BSLH    &kp UNDER       &kp PLUS    &kp RBRC          &kp RBKT                 &trans      &kp PIPE           &kp LT      &kp GT      &trans      &kp EQUAL
                           &trans          &trans      &trans                                      &trans      &trans             &trans
                    >;
                };

                sim_layer {
                    label= "SYM"                               ;
                    bindings = <
                   &kp EXCL    &bt BT_CLR      &kp HASH    &kp DLLR    &kp PRCNT       &kp CARET    &kp KP_N7   &kp KP_N8   &kp KP_N9     &kp DQT       
                   &kp RA(A)   &trans          &kp RA(S)   &kp LBRC      &kp LBKT          &kp C_MUTE   &kp KP_N4   &kp KP_N5   &kp KP_N6     &kp KP_N0 
&kp UNDER          &kp RA(F18) &kp RA(F19)     &trans      &kp RBRC      &kp RBKT          &kp C_VOL_DN &kp KP_N1   &kp KP_N2   &kp KP_N3     &kp BSLH   &kp EQUAL
                                        &trans      &trans        &trans         &trans      &trans    &trans      
                        >;
                };
        };
};
